# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Sync code sign"
  lane :retrieving_sign do
    puts 'Retrieving signing certificates and profiles...'
    sync_code_signing(
      app_identifier: "net.granoeste.example.helloflutter",
      type: "appstore", 
      readonly: true
    )
    sync_code_signing(
      app_identifier: "net.granoeste.example.helloflutter",
      type: "development", 
      readonly: true
    )
    sh("security find-identity -v -p codesigning")
  end

  desc "Run Build"
  lane :build do
    puts 'Certificates and profiles installed'
    disable_automatic_code_signing
    retrieving_sign
    puts 'Increment build number...'
    increment_build_number(xcodeproj: "Runner.xcodeproj")
    puts 'Build App...'
    build_app(workspace: "Runner.xcworkspace", scheme: "Runner")
  end

  desc "Run Build and Testflight"
  lane :build_and_testflight do
    build
    puts 'Upload to Testflight...'
    upload_to_testflight
  end

end
